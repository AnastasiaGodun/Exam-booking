<div class="form-bg">
  <div class="container">
    <div class="row">

      <h3 class="title">Регистрация</h3>

      <form method="POST" class="row g-3">

        <div class="col-md-3 was-validated">
          <input name="name" type="text" class="form-control" id="userName" placeholder="Ф.И.О" required>
        </div>


        <div class="col-md-3 was-validated">
          <select name="role" id="userRole" class="form-control">
            <option value="Администратор" selected>Администратор</option>
            <option value="Куратор" selected>Куратор</option>
            <option value="Экзаменатор" selected>Экзаменатор</option>
          </select>
          <label for="userRole">Выберите роль пользователя</label>
        </div>


        <div class="col-md-3 was-validated">
          <input name="email" type="text" class="form-control" id="userEmail" placeholder="Email" required>
        </div>
        {{> error}}

        <div class="col-md-3 was-validated">
          <input name="password" type="text" class="form-control" id="userPassword" placeholder="Пароль"
            required>
        </div>


        <div class="col-md-3 was-validated">
          <input name="phoneNumber" type="text" class="form-control" id="userPhoneNumber" placeholder="Номер телефона"
            required>
        </div>


        <div class="col-12">
          <button type="submit" class="btn btn-primary">Зарегистрировать</button>
        </div>
      </form>
    </div>
  </div>
</div>
