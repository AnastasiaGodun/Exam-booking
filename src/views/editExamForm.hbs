<div class="form-bg">
  <div class="container">
    <div class="row">

      <h3 class="title">Редактирование заявки на экзамен</h3>

      <form name="editTableForm" method="PATCH" class="row g-3" data-tableid="{{table._id}}">
        <div class="col-md-3 was-validated">
          <input name="studentName" type="text" class="form-control" id="studentName" value="{{table.studentName}}"
            placeholder="Ф.И.О студента" required>
          <div class="invalid-feedback">Пожалуйста введите ФИО студента</div>
        </div>

        <div class="callendar">
          <label for="datetime">Дата:</label>
          <div class="col-md-1">
            <select name="day" id="inputDay" class="form-select" value="{{table.day}}">
              <option selected>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
              <option>6</option>
              <option>7</option>
              <option>8</option>
              <option>9</option>
              <option>10</option>
              <option>11</option>
              <option>12</option>
              <option>13</option>
              <option>14</option>
              <option>15</option>
              <option>16</option>
              <option>17</option>
              <option>18</option>
              <option>19</option>
              <option>20</option>
              <option>21</option>
              <option>22</option>
              <option>23</option>
              <option>24</option>
              <option>25</option>
              <option>26</option>
              <option>27</option>
              <option>28</option>
              <option>29</option>
              <option>30</option>
              <option>31</option>
            </select>
          </div>
          <div class="col-md-1">
            <select name="month" id="inputMonth" class="form-select" value="{{table.month}}">
              <option selected>январь</option>
              <option>февраль</option>
              <option>март</option>
              <option>апрель</option>
              <option>май</option>
              <option>июнь</option>
              <option>июль</option>
              <option>август</option>
              <option>сентябрь</option>
              <option>октябрь</option>
              <option>ноябрь</option>
              <option>декабрь</option>
            </select>
          </div>
          <div class="col-md-1">
            <select name="year" id="inputYear" class="form-select" value="{{table.year}}">
              <option selected>2021</option>
              <option>2022</option>
              <option>2023</option>
              <option>2024</option>
            </select>
          </div>
        </div>

        <div class="time">
          <label for="date">Время:</label>
          <div class="col-md-1">
            <select name="hour" id="inputHour" class="form-select" value="{{table.hour}}">
              <option selected>01</option>
              <option>02</option>
              <option>03</option>
              <option>04</option>
              <option>05</option>
              <option>06</option>
              <option>07</option>
              <option>08</option>
              <option>09</option>
              <option>10</option>
              <option>11</option>
              <option>12</option>
              <option>13</option>
              <option>14</option>
              <option>15</option>
              <option>16</option>
              <option>17</option>
              <option>18</option>
              <option>19</option>
              <option>20</option>
              <option>21</option>
              <option>22</option>
              <option>23</option>
              <option>24</option>
            </select>
          </div>
          <div>:</div>
          <div class="col-md-1">
            <select name="minute" id="inputMinutes" class="form-select" value="{{table.minute}}">
              <option selected>00</option>
              <option>15</option>
              <option>30</option>
              <option>45</option>
            </select>
          </div>
        </div>

        <div class="col-md-3 was-validated">
          <input name="curator" type="text" class="form-control" id="curator" value="{{table.curator}}"
            placeholder="Ф.И.О куратора" required>
          <div class="invalid-feedback">Пожалуйста введите ФИО куратора</div>
        </div>


        <div class="col-md-3 was-validated">
          <select name="examinator" id="examinator" class="form-select" value="{{table.examinator.name}}">
          {{#each userMap}}
            <option value="{{this._id}}" selected>{{this.name}}</option>
          {{/each}}
          </select>
        </div>

        <div class="col-md-3 was-validated">
          <input name="group" type="text" class="form-control" id="group" value="{{table.group}}" placeholder="Группа"
            required>
          <div class="invalid-feedback">Группа</div>
        </div>

        <div class="col-md-3 was-validated">
          <input name="attempt" type="text" class="form-control" id="attempt" value="{{table.attempt}}"
            placeholder="Попытка" required>
          <div class="invalid-feedback">Попытка</div>
        </div>

        <div class="col-md-3 was-validated">
          <input name="zoomLink" type="text" class="form-control" id="zoomLink" value="{{table.zoomLink}}"
            placeholder="Ссылка на zoom" required>
          <div class="invalid-feedback">Ссылка на zoom</div>
        </div>

        <div class="col-md-3 was-validated">
          <input name="result" type="text" class="form-control" id="result" value="{{table.result}}"
            placeholder="Результат" required>
          <div class="invalid-feedback">Результат</div>
        </div>


        <div class="col-12">
          <button type="submit" class="btn btn-primary">Сохранить изменения</button>
        </div>
      </form>
    </div>
  </div>
</div>
